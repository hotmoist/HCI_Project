                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <NumberPicker
                            android:id="@+id/wednesday_AMPM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            />

                        <NumberPicker
